User
    name Text
    password ByteString
    emailAddress Text
    verified Bool
    verifyKey Text
    resetPasswordKey Text
    UniqueUser name
    deriving Show Read Eq
League json
    name Text
    UniqueLeague name
    deriving Show Read Eq
Game json
    league LeagueId
    name Text
    place Text
    teamAName Text
    teamBName Text
    date UTCTime
    UniqueGame name league
    deriving Show Read Eq
Score json
    gameId GameId
    quarter Quarter
    teamAPoint Int
    teamBPoint Int
    lock Bool
    UniqueScore gameId quarter
    deriving Show Read Eq

